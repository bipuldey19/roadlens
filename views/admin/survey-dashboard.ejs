                                </button>
                            ` : ''}
                            <button onclick="deleteSurvey('${survey.id}', event)" 
                                    class="text-red-600 hover:text-red-800 inline-flex items-center text-sm">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            `;
            
            marker.bindPopup(popupContent, {
                maxWidth: 300,
                minWidth: 250,
                className: 'custom-popup'
            });
            markers.addLayer(marker);
        });

        // Add markers to map
        map.addLayer(markers);

        // Fit map to markers
        const bounds = markers.getBounds();
        map.fitBounds(bounds, { padding: [50, 50] });

        // Force a map refresh after a short delay
        setTimeout(() => {
            map.invalidateSize();
        }, 100);

        // Add resize handler
        handleMapResize(surveyorId);
    }

    function toggleAddSurveyor() {
        const form = document.getElementById('addSurveyorForm');
        const chevron = document.getElementById('addSurveyorChevron');
        
        form.classList.toggle('hidden');
        chevron.style.transform = form.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
    }

    async function handleAddSurveyor(e) {
        e.preventDefault();
        
        const email = document.getElementById('email').value;
        // Get name from email by taking everything before @ and replacing dots/underscores with spaces
        const defaultName = email.split('@')[0]
            .replace(/[._]/g, ' ') // Replace dots and underscores with spaces
            .replace(/\b\w/g, c => c.toUpperCase()); // Capitalize first letter of each word
        
        const formData = {
            email: email,
            fullName: document.getElementById('fullName').value || defaultName,
            age: document.getElementById('age').value || null,
            institutionType: document.getElementById('institutionType').value || 'guest',
            institutionName: document.getElementById('institutionName').value || 'Guest Institution'
        };

        try {
            const response = await fetch('/admin/evaluation/add-manual-surveyor', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const data = await response.json();

            if (response.ok) {
                Toast.fire({
                    icon: 'success',
                    title: 'Surveyor added successfully'
                });
                setTimeout(() => {
                    window.location.reload();
                }, 1500);
            } else {
                Toast.fire({
                    icon: 'error',
                    title: data.message || 'Failed to add surveyor'
                });
            }
        } catch (error) {
            Toast.fire({
                icon: 'error',
                title: 'Failed to add surveyor'
            });
        }
    }
