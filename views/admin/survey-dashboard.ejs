    <script>
    function toggleMobileDetails(card, event) {
        if (event) event.stopPropagation();
        const detailsRow = card.querySelector('.mobile-details');
        const chevron = card.querySelector('.mobile-chevron');
        
        detailsRow.classList.toggle('hidden');
        chevron.style.transform = detailsRow.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
    }

    function toggleSurveyDetails(row, event) {
        if (event) event.stopPropagation();
        const detailsRow = row.nextElementSibling;
        const chevron = row.querySelector('.chevron-icon');
        
        detailsRow.classList.toggle('hidden');
        chevron.style.transform = detailsRow.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(90deg)';
        
        // Initialize or refresh map when showing details
        if (!detailsRow.classList.contains('hidden')) {
            const surveyorId = row.getAttribute('data-surveyor-id');
            const mapContainer = document.getElementById(`map-${surveyorId}`);
            if (mapContainer) {
                // Add a small delay to ensure the container is visible
                setTimeout(() => {
                    if (mapInstances.has(surveyorId)) {
                        const map = mapInstances.get(surveyorId);
                        map.invalidateSize();
                        return;
                    }
                    initializeSurveyorMap(surveyorId);
                }, 100);
            }
        }
    }

    // Initialize the image modal
    const imageModal = new ImageModal({
        zIndex: 9999,
        closeOnClickOutside: true,
        animationDuration: 300
    });

    function openImageModal(url, event) {
        event.stopPropagation();
        imageModal.open(url);
    }

    // Toast configuration - keep this for success/error messages
    const Toast = Swal.mixin({
        toast: true,
        position: "top-end",
        showConfirmButton: false,
        timer: 2000,
        timerProgressBar: true,
        didOpen: (toast) => {
            toast.addEventListener("mouseenter", Swal.stopTimer);
            toast.addEventListener("mouseleave", Swal.resumeTimer);
        },
    });

    // Modal management
    const deleteModal = document.getElementById('delete-modal');
    const modalBackdrop = document.getElementById('modal-backdrop');
    let currentSurveyId = null;

    // Close modal handlers
    document.getElementById('close-delete-modal').addEventListener('click', closeDeleteModal);
    document.getElementById('cancel-delete').addEventListener('click', closeDeleteModal);
    modalBackdrop.addEventListener('click', closeDeleteModal);

    function closeDeleteModal() {
        deleteModal.classList.add('hidden');
        deleteModal.classList.remove('flex');
        modalBackdrop.classList.remove('active');
        document.body.classList.remove('modal-open');
        currentSurveyId = null;
    }

    // Confirm delete handler
    document.getElementById('confirm-delete').addEventListener('click', async function() {
        if (!currentSurveyId) return closeDeleteModal();
        
        try {
            const response = await fetch(`/admin/surveys/delete/${currentSurveyId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            
            closeDeleteModal();
            
            if (response.ok) {
                Toast.fire({
                    icon: "success",
                    title: "Survey deleted successfully"
                });
                // Delay reload to show toast
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            } else {
                Toast.fire({
                    icon: "error",
                    title: "Failed to delete survey",
                    timerProgressBar: false
                });
            }
        } catch (error) {
            closeDeleteModal();
            console.error('Delete error:', error);
            Toast.fire({
                icon: "error",
                title: "Failed to delete survey",
                timerProgressBar: false
            });
        }
    });

    function deleteSurvey(id, event) {
        event?.stopPropagation();
        currentSurveyId = id;
        
        // Show the modal
        deleteModal.classList.remove('hidden');
        deleteModal.classList.add('flex');
        modalBackdrop.classList.add('active');
        document.body.classList.add('modal-open');
    }

    // Store map instances
    const mapInstances = new Map();

    function handleMapResize(surveyorId) {
        const mapContainer = document.getElementById(`map-${surveyorId}`);
        if (!mapContainer) return;

        const resizeObserver = new ResizeObserver(entries => {
            for (let entry of entries) {
                const map = mapInstances.get(surveyorId);
                if (map) {
                    requestAnimationFrame(() => {
                        map.invalidateSize();
                    });
                }
            }
        });

        resizeObserver.observe(mapContainer.parentElement);
    }

    function initializeSurveyorMap(surveyorId) {
        const mapContainer = document.getElementById(`map-${surveyorId}`);
        if (!mapContainer) return;

        // Find the surveyor data
        const surveyorData = JSON.parse('<%- JSON.stringify(surveyors) %>');
        const surveyor = surveyorData.find(s => s.id.toString() === surveyorId.toString());
        if (!surveyor) return;

        // Filter surveys with valid coordinates
        const validSurveys = surveyor.surveys.filter(s => s.latitude && s.longitude);
        if (validSurveys.length === 0) return;

        // Initialize map with a default view
        const map = L.map(mapContainer, {
            center: [validSurveys[0].latitude, validSurveys[0].longitude],
            zoom: 13
        });

        // Store the map instance
        mapInstances.set(surveyorId, map);

        // Add tile layer
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: ' OpenStreetMap contributors'
        }).addTo(map);

